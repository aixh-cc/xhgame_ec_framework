{
    "compilerOptions": {
        "target": "es6", // 
        "module": "commonjs", // 
        "experimentalDecorators": true, // 启用ES装饰器。
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "stripInternal": true,
        "types": [
            "node",
            "adm-zip",
            "@cocos/creator-types/editor"
        ]
    },
    "include": [
        "./src/**/*"
        // "libs"
    ],
    // 排除
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}